.container {
  padding: 20rpx;
  min-height: 100vh;
  position: relative;
  z-index: 1;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.15;
  z-index: -1;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.empty-state-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.empty-state-subtext {
  font-size: 28rpx;
  color: #999;
}

.task-list {
  margin-bottom: 120rpx;
}

.task-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  position: relative;
}

.pressure-indicator {
  width: 12rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.task-info {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-meta {
  margin-top: 8rpx;
}

.days-left {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.days-left.normal {
  color: #2ed573;
  background: rgba(46, 213, 115, 0.1);
}

.days-left.overdue {
  color: #ff4757;
  background: rgba(255, 71, 87, 0.1);
}

.days-left.today {
  color: #ffa502;
  background: rgba(255, 165, 2, 0.1);
}

.pressure-value {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.add-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2B2D42 0%, #1A1C2B 100%);
  box-shadow: 0 8rpx 24rpx rgba(43,45,66,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.plus-icon {
  color: #fff;
  font-size: 48rpx;
  font-weight: 300;
  margin-top: -4rpx;
}

.create-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: -100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  transition: all 0.3s ease;
  z-index: 100;
}

.create-panel.show {
  bottom: 0;
}

.input-area {
  margin-bottom: 32rpx;
}

.task-input {
  width: 100%;
  height: 160rpx;
  border: none;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
  color: #333;
  margin-top: 24rpx;
  padding: 16rpx 0;
}

.date-picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #999;
  border-bottom: 2rpx solid #eee;
  margin-top: 24rpx;
}

.date-picker.has-value {
  color: #333;
}

.feedback-area {
  margin-bottom: 48rpx;
}

.pressure-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.pressure-progress {
  height: 100%;
  background: linear-gradient(90deg, #2ed573 0%, #ffa502 50%, #ff4757 100%);
  transition: width 0.3s ease;
}

.comparison-tag {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333;
  margin-top: 24rpx;
  transition: all 0.3s ease;
}

.calculate-btn.loading {
  background: #e9ecef;
  color: #666;
  pointer-events: none;
}
.button-group {
  display: flex;
  justify-content: space-between;
}

.cancel-btn, .save-btn {
  width: 45%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #2B2D42;
  color: #fff;
}